{
  "ServiceInformation": {
    "Name": "Link Audit Service",
    "Version": "1.1.0-beta"
  },
  "KafkaConnection": {
    "BootstrapServers": [ "localhost:9092/" ],
    "ClientId": "audit-events",
    "GroupId": "audit-events"
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "botw-audit"
  },
  "TelemetryConfig": {
    "EnableRuntimeInstrumentation": false,
    "TraceExporterEndpoint": "http://localhost:4317/",
    "MetricsEndpoint": "http://localhost:9101",
    "TelemetryCollectorEndpoint": "http://localhost:4317"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://localhost:3100",
          "labels": [
            {
              "key": "app",
              "value": "Link-BoTW"
            },
            {
              "key": "component",
              "value": "Audit"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "component"
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "labels": [
            {
              "key": "app",
              "value": "Link-BoTW"
            },
            {
              "key": "component",
              "value": "Audit"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "component"
          ]
        }
      }
    ]
  }
}
