{
  "ServiceInformation": {
    "Name": "Link Audit Service",
    "Version": "1.1.0-beta"
  },
  "KafkaConnection": {
    "BootstrapServers": [],
    "ClientId": "",
    "GroupId": ""
  },
  "MongoDB": {
    "ConnectionString": "",
    "DatabaseName": "",
    "CollectionName": ""
  },
  "IdentityProviderConfig": {
    "Issuer": "",
    "Audience": "",
    "NameClaimType": "email",
    "RoleClaimType": "roles",
    "ValidTypes": [ "at+jwt", "JWT" ]
  },
  "TelemetryConfig": {
    "TraceExporterEndpoint": "http://localhost:4317/",
    "MetricsEndpoint": "http://localhost:9101",
    "TelemetryCollectorEndpoint": "http://localhost:55690"
  },
  "AllowReflection": true,
  "EnableSwagger": true,
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "LantanaGroup.Link.Audit": "Information",
      "LantanaGroup.Link.Audit.Presentation": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "http": {
        "Url": "http://localhost:7334"
      },
      "https": {
        "Url": "https://localhost:7335"
      },
      "Grpc": {
        "Url": "http://localhost:7336",
        "Protocols": "Http2"
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "labels": [
            {
              "key": "app",
              "value": "Link-BoTW"
            },
            {
              "key": "component",
              "value": "Audit"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "component"
          ]
        }
      }
    ]
  }
}
