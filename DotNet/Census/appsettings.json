{
  "ServiceInformation": {
    "Name": "Link Census Service",
    "Version": "1.1.00-dev"
  },
  "AllowReflection": true,
  "KafkaConnection": {
    "BootstrapServers": [],
    "ClientId": "",
    "GroupId": ""
  },
  "Redis": {
    "Endpoint": "",
    "DatabaseName": "",
    //"DatabaseNumber": 0,
    "Expiry": ""
  },
  "DatabaseProvider": "SqlServer",
  "ConnectionStrings": {
    "SqlServer": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Telemetry": {
    "EnableTelemetry": false,
    "EnableRuntimeInstrumentation": false,
    "EnableOtelCollector": false,
    "OtelCollectorEndpoint": "",
    "EnableAzureMonitor": false
  },
  "TenantApiSettings": {
    "TenantServiceBaseEndpoint": "",
    "GetTenantRelativeEndpoint": "",
    "CheckIfTenantExists": true
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "labels": [
            {
              "key": "app",
              "value": "Link"
            },
            {
              "key": "component",
              "value": "DataAcquisition"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "component"
          ]
        }
      },
      {
        "Name": "Console"
      }
    ]
  }
}
