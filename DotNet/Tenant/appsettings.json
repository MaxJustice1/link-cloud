{
  "ServiceInformation": {
    "Name": "Link Tenant Service",
    "Version": "1.1.00-dev"
  },
  "ExternalConfigurationSource": "",
  "AllowReflection": true,
  "EnableSwagger": true,
  "DatabaseProvider": "SqlServer",
  "ConnectionStrings": {
    "DatabaseConnection": ""
  },
  "KafkaConnection": {
    "BootstrapServers": [],
    "GroupId": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "LokiLoggingProvider": "Trace"
    }
  },
  "AllowedHosts": "*",
  "MeasureConfig": {
    "CheckIfMeasureExists": true
  },
  "ServiceRegistry": {
    "MeasureServiceUrl": ""
  },
  "Telemetry": {
    "EnableTelemetry": false,
    "EnableRuntimeInstrumentation": false,
    "EnableOtelCollector": false,
    "OtelCollectorEndpoint": "",
    "EnableAzureMonitor": false
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Grafana.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "",
          "labels": [
            {
              "key": "app",
              "value": "Link"
            },
            {
              "key": "component",
              "value": "Tenant"
            }
          ],
          "propertiesAsLabels": [ "app", "component" ]
        }
      }
    ]
  }
}
